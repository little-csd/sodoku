<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryActivity">

    <ImageView
        android:layout_width="210dp"
        android:layout_height="140dp"
        android:background="@mipmap/head"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_easy"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="easy"
        android:textAllCaps="false"
        android:background="@mipmap/p1"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_normal"/>

    <Button
        android:id="@+id/button_normal"
        android:text="normal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/p2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_hard"/>

    <Button
        android:id="@+id/button_hard"
        android:text="hard"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/p3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>